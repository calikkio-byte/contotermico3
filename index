const catalogoPDC = [
    {marca:'AERMEC',modello:'HMI 100',tipo:'Aria/Acqua',potenza:10.10,inverter:true,cop:4.63},
    {marca:'ARISTON',modello:'NIMBUS POCKET 150 R32',tipo:'Aria/Acqua',potenza:15.00,inverter:true,cop:4.70},
